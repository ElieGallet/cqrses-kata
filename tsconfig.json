{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [ "es2015", "dom" ],
    "types": [
      "node", 
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./src/**/*", "index.ts" ],
  "ignore": [ "./nodes_modules/" ]
}
